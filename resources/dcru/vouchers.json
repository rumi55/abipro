{
    "name":"vouchers",
    "title":"Voucher",
    "actions":[
        {"type":"create","label":"Buat Voucher"},
        {
            "label":"Penerimaan", 
            "route":{
                "name":"vouchers.create.single", 
                "params":{
                    "type":"in"
                }
            }
        },
        {"label":"Pengeluaran", "route":{"name":"vouchers.create.single", "params":{"type":"out"}}}
    ],
    "dtables":{
        "title":"Voucher",
        "columns":[
            {
                "data":"checkbox",
                "type":"checkbox"
            },
            {
                "data":"trans_date", 
                "name":"trans_date", 
                "type":"date", 
                "title":"Transaction Date"
            },
            {
                "data":"trans_no", 
                "name":"trans_no", 
                "type":"detail",
                "filter":{
                    "type":"unique",
                    "table":"transactions",
                    "column":"trans_no"
                },
                "detail_id":"id", 
                "detail_name":"vouchers", 
                "title":"Transaction No."
            },
            {
                "data":"trans_type", 
                "name":"trans_type", 
                "type":"badge", 
                "badge":{
                    "receipt":{"color":"success", "text":"receipt"},
                    "payment":{"color":"primary", "text":"payment"}
                },
                "title":"Transaction Type"
            },
            {
                "data":"amount", 
                "name":"amount", 
                "type":"currency", 
                "title":"Amount"
            },
            {
                "data":"status", 
                "name":"status", 
                "type":"badge", 
                "badge":{
                    "draft":{"color":"secondary", "text":"draft"},
                    "submitted":{"color":"warning", "text":"submitted"},
                    "approved":{"color":"success", "text":"approved"},
                    "rejected":{"color":"danger", "text":"rejected"}
                },
                "title":"Status"
            },
            {
                "data":"created_name", 
                "name":"users.name", 
                "title":"Created By",
                "type":"route",
                "route":{
                    "name":"users.view",
                    "params":{
                        "id":"created_by"
                    }
                }
            },
            {
                "data":"", 
                "name":"", 
                "type":"menu", 
                "title":"",
                "orderable":false,
                "items":[
                    {
                        "label": "Detail",
                        "type": "view"
                    },
                    {
                        "label": "Cetak",
                        "icon": "fas fa-print",
                        "visible":"status==approved",
                        "route": {
                            "name":"vouchers.report"
                        }
                    },
                    {
                        "label": "Edit",
                        "type": "edit"
                    },
                    {
                        "label": "Gandakan",
                        "type": "duplicate"
                    },
                    {
                        "label": "Hapus",
                        "type": "delete"
                    }
                ]
            }
        ],
        "bulk_actions":[
            {
                "label":"Hapus",
                "icon":"fas fa-trash",
                "confirm":"Apakah Anda yakin akan menghapus item terpilih?",
                "route":{
                    "name":"dcru.delete.batch",
                    "params":{
                        "name":"vouchers"
                    }
                }
            }
        ],
        "query":{
            "table":"transactions",
            "select":"transactions.*, users.name as created_name",
            "joins":[
                {
                    "join":"left",
                    "table":"users",
                    "on":"users.id=transactions.created_by"
                }
            ],
            "where":{
                "condition": "transactions.company_id=?",
                "params":["user:company_id"]
            }
        }
    },
    "form":{
        "title": "Jurnal",
        "table": "transactions",
        "fields":[]
    }

}